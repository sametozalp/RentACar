<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="25dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardBackgroundColor="#EFECEC"
    app:contentPadding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        tools:context=".Pages.CarDetails">

        <ImageView
            android:id="@+id/carImage"
            android:layout_width="match_parent"
            android:layout_height="233dp"
            android:scaleType="fitXY"
            android:src="@drawable/no_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/carBrandAndModelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="22dp"
                android:text="Fiat Egea">
            </TextView>
            <TextView
                android:id="@+id/carPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#770606"
                android:textStyle="bold"
                android:textSize="22dp"
                android:text="400 TL">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/gearTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#6E6666"
                android:gravity="center"
                android:textSize="15dp"
                android:text="Manuel">
            </TextView>
            <TextView
                android:id="@+id/fuelTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#6E6666"
                android:text="Benzin">
            </TextView>
            <TextView
                android:id="@+id/colorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#6E6666"
                android:text="Kırmızı">
            </TextView>
        </LinearLayout>

        <Button
            android:onClick="appointmentRequestButton"
            android:layout_marginTop="20dp"
            android:id="@+id/appointmentRequestButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Randevu İsteği Gönder" />


    </LinearLayout>
</androidx.cardview.widget.CardView>
